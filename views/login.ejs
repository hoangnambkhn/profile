                                      <input id="login-username" type="text" class="form-control" name="logemail" value="" placeholder="username or email">                                        
                                  </div>
                              
                          <div style="margin-bottom: 25px" class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                      <input id="login-password" type="password" class="form-control" name="logpassword" placeholder="password">
                                  </div>
                                  

                              
                          <div class="input-group">
