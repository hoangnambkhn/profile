<body>
  <div class = "header">
     <div class = "navbar navbar-inverse navbar-fixed-top app-navbar">
       <div class = "container" >
         <a href = '/confes'>
           <button type="button" class="btn btn-primary-outline">Assmin</button>
           </a>
         <a href = "about">
           <button class = " right btn btn-primary-outline" id = "btn-about"> About Me </button>    
         </a>
         <a href="/contact">
           <button class=" right btn btn-primary-outline" id="btn-signin"> Contact Me </button>
         </a>
         <a href = "/home">
           <button class=" right btn btn-primary-outline" id="btn-home"> Home </button>
         </a>
         <a href = "/logout">
            <button class= "right btn btn-primary-outline" id= "btn-logout">Logout</button>
        </a> 
       </div>
         
       </div>
       </div>
       <div class = "container">
            <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                      <div class="card card-stats">
                        <div class="card-header card-header-warning card-header-icon">
                          <div class="card-icon">
                            <i class="glyphicon glyphicon-th-large"></i>
                          </div>
                          <p class="card-category">Used Space</p>
                          <h3 class="card-title">49/50
                            <small>GB</small>
                          </h3>
                        </div>
                        <div class="card-footer">
                          <div class="stats">
                            <i class="material-icons text-danger">warning</i>
                            <a href="#pablo">Get More Space...</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                      <div class="card card-stats">
                        <div class="card-header card-header-success card-header-icon">
                          <div class="card-icon">
                            <i class="glyphicon glyphicon-home"></i>
                          </div>
                          <p class="card-category">Revenue</p>
                          <h3 class="card-title">$34,245</h3>
                        </div>
                        <div class="card-footer">
                          <div class="stats">
                            <i class="material-icons">date_range</i> Last 24 Hours
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                      <div class="card card-stats">
                        <div class="card-header card-header-danger card-header-icon">
                          <div class="card-icon">
                                <i class="glyphicon glyphicon-info-sign"></i>
                          </div>
                          <p class="card-category">Fixed Issues</p>
                          <h3 class="card-title">75</h3>
                        </div>
                        <div class="card-footer">
                          <div class="stats">
                            <i class="material-icons">local_offer</i> Tracked from Github
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                      <div class="card card-stats">
                        <div class="card-header card-header-info card-header-icon">
                          <div class="card-icon">
                                <i class="glyphicon glyphicon-user"></i>
                          </div>
                          <p class="card-category">Followers</p>
                          <h3 class="card-title">+245</h3>
                        </div>
                        <div class="card-footer">
                          <div class="stats">
                            <i class="material-icons">update</i> Just Updated
                          </div>
                        </div>
                      </div>
                    </div>
            </div>
            <div class = "row">
                    <div class=" card card-stats center-block" style="width:800px;">
                            <% if(user) { %>
                                <p>Name: <%= user.username %></p>
                                <p>Mail: <%= user.email %></p> 
                                <p>List question:</p>
                                <br>
                            <div class="text-center">
                                    <div class="list-group list-inline center-block text-center" id="list-poll" >
                                      <script src="https://code.jquery.com/jquery-2.2.1.min.js"
                                          integrity="sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00="
                                          crossorigin="anonymous"></script>
                                       <script >
                                      $.get("/getMyQuestion", function(data) {
                                          console.log(data);
                                      for(var i = 0; i < data.question.length; i++){
                                            var html = '';
                                            html += '<div class = "list list-group-item">';
                                            html += '<div class = "row">';
                                            html += '<div class = "col-md-8  grab">';
                                            html += '<a class = "question" href = "/question?id='+ data.question[i]._id +'">';
                                            html += '<div>' + data.question[i].message + '</div>';
                                            html += '<div>' + "anonymous" + '</div>';
                                            html += '</a>' + '</div>';
                                            html += '<div class = "col-md-4 remove_icon">';
                                            html += ' <a href="/remove?id='+ data.question[i]._id +'">Remove</a>';
                                            html += '<a href="#">Share</a>';
                                            html += '</div>' + '</div>' + '</div>';
                                            $('#list-poll').append(html);
                                          }
                                      });
                                   
                                  </script>
                                    </div>
                                  </div>
                                  <br>
                                  <a type="button" href="/logout">Logout</a>

                    <% } %>

                    </div>

            </div>
       </div>
       
 
